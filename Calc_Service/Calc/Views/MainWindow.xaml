<Window x:Class="Calc.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="380" Width="520">
    <Grid>
        <Grid Background="AliceBlue">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>
            <ContentControl prism:RegionManager.RegionName="Selector" Grid.Column="0"  />
            <ContentControl prism:RegionManager.RegionName="Screen" Grid.Column="0" Grid.Row="1" Margin="0" />
            <ContentControl prism:RegionManager.RegionName="Scientific" Grid.Column="0" Grid.Row="2" />
            <ContentControl prism:RegionManager.RegionName="General" Grid.Column="0" Grid.Row="3" />
        </Grid>
    </Grid>
</Window>
    
    

